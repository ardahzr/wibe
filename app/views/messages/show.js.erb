  <div class="chat-header border-bottom p-3">
    <h5 class="mb-0">Chat with <%= @other_user.username %></h5>
  </div>
  
  <div class="messages-container p-3" style="height: calc(100vh - 200px); overflow-y: auto;">
    <% @messages.each do |message| %>
