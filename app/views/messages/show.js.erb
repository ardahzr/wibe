          <div>
            <small class="text-muted file-name"></small>
            <button type="button" class="btn btn-sm btn-link text-danger p-0 ms-2" onclick="removeFilePreview()">
              <i class="bi bi-x-circle"></i> Remove
            </button>
          </div>
        </div>
