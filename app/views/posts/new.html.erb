<h1>Create a New Post</h1>

<%= form_with(model: @post, local: true) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if flash[:alert].present? %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
  
  <div class="field">
                <%= f.label :title, "Post Title", class: "form-label" %>
                <%= f.text_field :title, class: 'form-control', placeholder: "Add a title for your post" %>
   </div>

  <div class="field">
    <%= f.label :content, "Post Content" %><br>
    <%= f.text_area :content, rows: 5, placeholder: "Write something..." %>
  </div>

  <div class="field">
    <%= f.label :media, "Attach Media (optional)" %><br>
    <%= f.file_field :media, accept: 'image/jpeg,image/png,video/mp4' %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Post', class: 'btn btn-primary' %>
  </div>
<% end %>
