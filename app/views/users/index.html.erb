<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container-fluid" style="background: linear-gradient(135deg, #5941ff, #41d1ff);">
  <div class="row min-vh-100 d-flex align-items-center justify-content-center">
    <div class="col-md-10">
      <div class="container mt-5">
        <div class="row">
          <div class="col-12">
            <h1 class="display-4 mb-4 text-white">Users</h1>
          </div>
        </div>
        <div class="row">
          <% @users.each do |user| %>
            <div class="col-md-4 mb-3">
              <div class="card shadow-sm">
                <div class="card-body">
                  <h5 class="card-title"><%= user.username %></h5>
                  <div class="friendship-actions mt-3">
                    <%= render 'shared/friendship_button', user: user unless user == current_user %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="row mt-4">
          <div class="col-12">
            <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>