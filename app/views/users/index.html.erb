<div class="container">
  <h1>Users</h1>
  
  <div class="users-list">
    <% @users.each do |user| %>
      <div class="user-card">
        <span class="user-email"><%= user.email %></span>
        <div class="friendship-actions">
          <%= render 'shared/friendship_button', user: user unless user == current_user %>
        </div>
      </div>
    <% end %>
  </div>
</div>