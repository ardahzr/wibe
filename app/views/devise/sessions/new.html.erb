<%= render layout: 'devise/shared/auth_layout' do %>
  <% content_for :show_branding do %>
    true
  <% end %>
  <% content_for :welcome_message do %>
    Welcome Back
  <% end %>
  <div class="container-fluid">
    <div class="row min-vh-100 d-flex align-items-center justify-content-center">
      <div class="col-md-6">
        <div class="p-4" style="background-color: rgba(255, 255, 255, 0.9); width: 100%; max-width: 700px;">
          <h2 class="text-center mb-4" style="color: #3747b3;">Log In to Wibe</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.text_field :email, autofocus: true, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>
            <div class="d-grid gap-2">
              <%= f.submit "Log in", class: "btn btn-lg", style: "background-color: #5941ff; color: white;" %>
            </div>
          <% end %>
          <div class="mt-3 text-center">
            <%= link_to "Sign up", new_user_registration_path, class: "btn btn-link" %>
            <%= link_to "Forgot your password?", new_user_password_path, class: "btn btn-link" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>