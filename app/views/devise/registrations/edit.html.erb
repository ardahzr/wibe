<%= render layout: 'devise/shared/auth_layout' do %>
  <div class="container-fluid" style="background: linear-gradient(135deg, #5941ff, #41d1ff);">
    <div class="row min-vh-100 d-flex align-items-center justify-content-center">
      <div class="col-md-6">
        <div class="p-4" style="background-color: rgba(255, 255, 255, 0.9); width: 100%; max-width: 700px;">
          <h2 class="text-center mb-4" style="color: #3747b3;">Edit <%= resource_name.to_s.humanize %></h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation", novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- Email Field -->
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", value: resource.email %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="alert alert-warning">
                Currently waiting confirmation for: <%= resource.unconfirmed_email %>
              </div>
            <% end %>

            <!-- Username Field -->
            <div class="mb-3">
              <%= f.label :username, "Username", class: "form-label" %>
              <%= f.text_field :username, class: "form-control", value: resource.username %>
            </div>

            <!-- Status Field -->
            <div class="mb-3">
              <%= f.label :status, "Status", class: "form-label" %>
              <%= f.text_area :status, class: "form-control", value: resource.status %>
            </div>

            <!-- Avatar Field -->
            <div class="field mb-3">
              <%= f.label :avatar, "Profile Picture", class: "form-label" %>
              <%= f.file_field :avatar, class: "form-control" %>
              <% if resource.avatar.attached? %>
                <div class="mt-2">
                  <%= image_tag resource.avatar, class: "rounded-circle", style: "width: 100px; height: 100px; object-fit: cover;" %>
                </div>
              <% end %>
            </div>

            <!-- Password Fields -->
            <div class="mb-3">
              <%= f.label :password, class: "form-label" %> <i>(leave blank if you don't want to change it)</i>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              <% if @minimum_password_length %>
                <div class="form-text">
                  <em><%= @minimum_password_length %> characters minimum</em>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :current_password, class: "form-label" %> <i>(we need your current password to confirm your changes)</i>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <!-- Submit Button -->
            <div class="d-grid gap-2">
              <%= f.submit "Update", class: "btn btn-lg", style: "background-color: #5941ff; color: white;" %>
            </div>
          <% end %>

          <!-- Cancel Account Section -->
          <h3 class="mt-4">Cancel my account</h3>
          <div>
            <%= button_to "Cancel my account", registration_path(resource_name), 
                          data: { confirm: "Are you sure you want to cancel your account?" }, method: :delete, class: "btn btn-danger" %>
          </div>

          <div class="mt-3 text-center">
            <%= link_to "Back", :back, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
